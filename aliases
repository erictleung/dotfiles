# quicker navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# shortcuts
alias dl="cd ~/Downloads"
alias dt="cd ~/Desktop"
alias doc="cd ~/Documents"

# git shortcuts
alias gs="git status"
alias ga="git add ."
alias gc="git commit -m"
alias gp="git push"
alias gd="git diff"
alias gg="git pull"

# detect which `ls` flavor is in use
if ls --color > /dev/null 2>&1; then # GNU `ls`
    colorflag="--color"
else # OS X `ls`
    colorflag="-G"
fi

# make ls work like I want it
alias ls="ls -ltrh $colorflag"

# list files colorized in long format
alias ll="ls -l ${colorflag}"

# list all files colorized in long format
alias la="ls -la ${colorflag}"

# list only directories
alias lsd="ls -l ${colorflag}" | grep --color=never '^d'""

# list hidden files
alias l.="ls -d .* ${colorflag}"

# account for misspelling
alias sl="ls"
alias cd..="cd .."

# get feedback from user for these commands
alias cp="cp -vi" # prompt you when copying if you are going to overwrite
alias rm="rm -i" # prompt you if you really want to remove file
alias mv="mv -i" # prompt you if you are going to overwrite something

# find disk space hogs
alias ducks='du -cks * | sort -rn | head'

# clear terminal screen with simple letter
alias c="clear"

# simple calculator with math support
alias bc="bc -l"

# nice echo of PATH
alias path='echo -e ${PATH//:/\\n}'
