[alias]
	a = add
	ap = add -p
	bdm = "!git branch --merged | grep -v '*' | xargs -n 1 git branch -d"
	co = checkout
	cob = checkout -b
	ca = commit --amend
	cm = commit --message
	cv = commit --verbose
	d = diff
	dc = diff --cached
	ir = !sh -c 'git rebase -i origin/${1-master}' -
	me = config user.name
	rank = shortlog -sn --no-merges
	rb = rebase
	rso = remote show origin
	s = status
	st = status -sb
	today = !git all --since='12am' --committer=\"`git me`\"
	uc = reset --soft HEAD^
	uca = reset --hard HEAD^
	unstage = reset HEAD
[color]
	ui = auto
[core]
	editor = vim
[user]
	email = eric@erictleung.com
	name = Eric Leung
[help]
	autocorrect = 1
